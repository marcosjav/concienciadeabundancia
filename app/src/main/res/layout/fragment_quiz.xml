<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        style="@style/textViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:text="ENTRENAMIENTO DE DESARROLLO PERSONAL"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@drawable/title_rounder_corner"
        android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ViewSwitcher
                android:id="@+id/view_switcher_quiz_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--<LinearLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:gravity="center"-->
                    <!--android:orientation="vertical">-->

                    <!--<ProgressBar-->
                        <!--android:layout_width="100dp"-->
                        <!--android:layout_height="100dp"-->
                        <!--android:indeterminate="true"/>-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="cargando..."-->
                        <!--android:textColor="@android:color/black"/>-->

                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_view_quiz_title"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TITLE"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_quiz_subtitle"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="SUBTITLE"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text_view_quiz_module"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="10dp"
                        android:text="MODULE"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_quiz_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="10dp"
                        android:text="DESCRIPTION"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/video_test_button"
                        style="@android:style/Widget.Button.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dip"
                        android:text="video de cÃ³mo testear" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Creencias a testear"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="Resultado del testeo"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/list_view_quiz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="#FF9900"
                        android:dividerHeight="1dp">

                    </ListView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:text="Siempre recuerden que todo empieza y termina en uno mismo, al cambiar estos patrones
mentales, transformaran todas sus relaciones de forma nutritiva y permanente."
                        android:textColor="@android:color/black"
                        android:gravity="center"/>

                    <ViewSwitcher
                        android:id="@+id/view_switcher_quiz_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/button_quiz_ok"
                            style="@style/button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dip"
                            android:text="ENVIAR" />

                        <ProgressBar
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:layout_gravity="center_horizontal"
                            android:indeterminate="true"
                            android:indeterminateDrawable="@drawable/custom_progress_bar" />

                    </ViewSwitcher>
                </LinearLayout>
            </ViewSwitcher>
        </LinearLayout>
    </ScrollView>
</LinearLayout>