<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/layout_rounder_cornes"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageButton
                android:id="@+id/button_attention_main"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@null"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/attention_yellow"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:gravity="right|top">

                <ImageButton
                    android:id="@+id/button_share_main"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ico_share"/>

                <ImageButton
                    android:id="@+id/button_information_main"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ico_information"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/button_logout_main"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/logout"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/logo_white" />

        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/button_main_conference"
                            style="@style/button"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ico_conference" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="PrÃ³ximos \n encuentros"
                            android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/button_main_videos"
                            style="@style/button"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ico_video" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Videos"
                            android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/button_main_progress"
                            style="@style/button"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ico_progress" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Avances"
                            android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/button_main_test"
                            style="@style/button"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ico_test" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Test"
                            android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_facebook_link"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ico_fb" />

            <ImageButton
                android:id="@+id/button_email_link"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ico_mail"/>

            <ImageButton
                android:id="@+id/button_tweeter_link"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ico_tw"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/button_web_link"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ico_web" />

            <ImageButton
                android:id="@+id/button_phone_link"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ico_phone" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>