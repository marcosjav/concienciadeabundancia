<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fodo1"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- BOTÓN DE NOTIFICACIONES Y DE AGREGAR UN MENOR-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/notifications"
                        style="@style/imageButton"
                        android:layout_margin="0dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:src="@android:drawable/sym_action_chat" />

                    <ImageView
                        android:id="@+id/notifications_indicator"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="3dp"
                        android:scaleType="fitXY"
                        android:src="@android:drawable/ic_notification_overlay"
                        android:visibility="gone"/>

                </RelativeLayout>

                <ImageButton
                    android:id="@+id/add_children"
                    style="@style/imageButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="40dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/childrens"
                    android:visibility="visible" />

            </LinearLayout>

            <!--BOTON DE SETTINGS Y LOGOUT-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|end"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_settings"
                    style="@style/imageButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="40dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/new_icon_settings" />

                <ImageButton
                    android:id="@+id/button_logout_main"
                    style="@style/imageButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_margin="15dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/new_icon_logout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/new_logo" />

                <TextView
                    android:id="@+id/text_view_conciencia"
                    style="@style/textViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-25dp"
                    android:text="@string/app_half_name_1"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />

                <TextView
                    style="@style/textViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-11dp"
                    android:text="SER"
                    android:textColor="@android:color/white"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>


        <FrameLayout
            android:id="@+id/frame_layout_scroll_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!--<ImageButton
                android:id="@+id/up_arrow_main"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/up_arrow_sketch"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/down_arrow_main"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|end"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/down_arrow_sketch" />-->

            <ScrollView
                android:id="@+id/scroll_view_main"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@null">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="test"
                        android:visibility="gone" />

                    <!-- BOTÓN DE ENTRENAMIENTOS-->
                    <LinearLayout
                        android:id="@+id/layout_button_trainings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitStart"
                            android:src="@drawable/new_icon_trainings" />

                        <Button
                            android:id="@+id/button_main_quiz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_item"
                            android:minWidth="180dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:text="ENTRENAMIENTOS"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!-- BOTÓN DE COMPARTIR-->
                    <LinearLayout
                        android:id="@+id/layout_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:padding="4dp"
                            android:scaleType="fitStart"
                            android:src="@drawable/new_icon_share" />

                        <Button
                            android:id="@+id/button_share_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_item"
                            android:minWidth="180dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:text="COMPARTIR"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <!-- BOTÓN DE ABONAR -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitStart"
                            android:src="@drawable/handshake" />

                        <Button
                            android:id="@+id/button_subscribe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_item"
                            android:minWidth="180dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:text="ABONAR"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitStart"
                            android:src="@drawable/new_icon_videos" />

                        <Button
                            android:id="@+id/button_main_videos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_item"
                            android:minWidth="180dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:text="VIDEOS EXPLICATIVOS"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitStart"
                            android:src="@drawable/new_icon_about" />

                        <Button
                            android:id="@+id/button_main_about_us"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_item"
                            android:minWidth="180dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:text="QUIENES SOMOS"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitStart"
                            android:src="@drawable/new_icon_fundaments" />

                        <Button
                            android:id="@+id/button_main_fundaments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_item"
                            android:minWidth="180dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:text="FUNDAMENTOS"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitStart"
                            android:src="@drawable/new_icon_faq" />

                        <Button
                            android:id="@+id/button_main_faq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_item"
                            android:minWidth="180dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:text="PREGUNTAS FRECUENTES"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitStart"
                            android:src="@drawable/new_icon_congress" />

                        <Button
                            android:id="@+id/button_main_conference"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_item"
                            android:minWidth="180dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:text="PRÓXIMOS ENCUENTROS"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="0.00"
            android:background="@drawable/new_bottom_bar"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <ImageButton
                android:id="@+id/button_tweeter_link"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/new_icono_twitter" />

            <ImageButton
                android:id="@+id/button_facebook_link"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/new_icono_facebook" />


            <ImageButton
                android:id="@+id/button_insta_link"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/new_icono_insta" />


            <ImageButton
                android:id="@+id/button_web_link"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/new_icono_web" />

            <ImageButton
                android:id="@+id/button_email_link"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/new_icono_mail" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>