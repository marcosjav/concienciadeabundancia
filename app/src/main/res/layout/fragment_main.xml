                            android:layout_height="wrap_content"
                            android:background="@drawable/new_item"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:text="PREGUNTAS FRECUENTES"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
